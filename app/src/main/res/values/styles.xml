<resources>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/textPrimary</item>

    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:windowBackground">@color/background</item>

    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/textPrimaryToolbar</item>
        <item name="android:textColorSecondary">@color/textPrimaryToolbar</item>
        <item name="android:textColor">@color/textPrimaryToolbar</item>
    </style>

    <style name="ToolbarPopupTheme" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/background</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
